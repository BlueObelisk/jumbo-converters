memory total 1000 mb

geometry
 Ne     0.0 0.0 0.0
end

basis "ao basis" spherical
  * library cc-pvqz
end

mp2
  freeze 0
  scratchdisk 4096
end

dft
  xc HFexch 0.53 becke88 0.47 lyp 0.73 mp2 0.27
  dftmp2 semidirect
  convergence energy 1e-8
  iterations 100
end

task dft energy

dft
  xc HFexch 0.53 becke88 0.47 lyp 0.73 mp2 0.27
  dftmp2 direct
  direct
  convergence energy 1e-8
  iterations 100
end

