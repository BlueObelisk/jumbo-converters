<template repeat="*"  id="gradmodulestep" name="Steps" 
  pattern="\s*@\s*Step\s+Energy\s+Delta\s*E.*" 
  newline="$" endPattern="\s*">
  
  <comment class="example.input" id="gradmodulestep">
@ Step       Energy      Delta E   Gmax     Grms     Xrms     Xmax   Walltime
