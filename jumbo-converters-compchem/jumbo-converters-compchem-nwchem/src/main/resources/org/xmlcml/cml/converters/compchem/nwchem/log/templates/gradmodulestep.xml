        <scalar dataType="xsd:double" dictRef="n:xmax">1.0</scalar>
        <scalar dataType="xsd:double" dictRef="cc:walltime">8.0</scalar>
      </list>
      <array dataType="xsd:string" size="2" dictRef="n:ok" cmlx:templateRef="ok">ok ok</array>
    </module>
  </comment>

</template>
