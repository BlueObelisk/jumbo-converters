<template repeat="*"  id="fourindex" name="Four-Index Transformation" 
  pattern="\s*Four\-Index Transformation\s*$\s+\-+.*" newline="$" endPattern="\s*$\s*">>

  <comment class="example.input" id="fourindex">
                   Four-Index Transformation
                   -------------------------
          Number of basis functions:            131
          Number of shells:                      35
          Number of occupied orbitals:            9
          Number of occ. correlated orbitals:     9
          Block length:                          16
          Superscript MO index range:        1 -  9
          Subscript MO index range:          1 -131
          MO coefficients read from:  ./Au+.movecs             
          Number of operator matrices in core:   90
          Half-transformed integrals produced
          
</comment>
<record repeat="2"/>
<record id="r1" repeat="*">\s*{X,x:name}\s*:\s*{1_3A,x:value}\s*</record>
<record id="r2">\s*{X,n:half}produced\s*</record>

  <comment class="example.output" id="fourindex">
    <module cmlx:templateRef="fourindex" xmlns="http://www.xml-cml.org/schema" xmlns:cmlx="http://www.xml-cml.org/schema/cmlx">
      <list cmlx:templateRef="r1">
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">Number of basis functions</scalar>
          <array dataType="xsd:string" size="1" dictRef="x:value">131</array>
        </list>
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">Number of shells</scalar>
          <array dataType="xsd:string" size="1" dictRef="x:value">35</array>
        </list>
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">Number of occupied orbitals</scalar>
          <array dataType="xsd:string" size="1" dictRef="x:value">9</array>
        </list>
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">Number of occ. correlated orbitals</scalar>
          <array dataType="xsd:string" size="1" dictRef="x:value">9</array>
        </list>
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">Block length</scalar>
          <array dataType="xsd:string" size="1" dictRef="x:value">16</array>
        </list>
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">Superscript MO index range</scalar>
          <array dataType="xsd:string" size="3" dictRef="x:value">1 - 9</array>
        </list>
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">Subscript MO index range</scalar>
          <array dataType="xsd:string" size="2" dictRef="x:value">1 -131</array>
        </list>
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">MO coefficients read from</scalar>
          <array dataType="xsd:string" size="1" dictRef="x:value">./Au+.movecs</array>
        </list>
        <list>
          <scalar dataType="xsd:string" dictRef="x:name">Number of operator matrices in core</scalar>
          <array dataType="xsd:string" size="1" dictRef="x:value">90</array>
        </list>
      </list>
      <list cmlx:templateRef="r2">
        <scalar dataType="xsd:string" dictRef="n:half">Half-transformed integrals</scalar>
      </list>
    </module>
  </comment>

</template>
