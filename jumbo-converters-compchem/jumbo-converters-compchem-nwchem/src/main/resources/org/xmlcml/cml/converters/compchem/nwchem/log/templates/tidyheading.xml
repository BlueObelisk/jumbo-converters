<template repeat="*"  id="tidyheading" name="Tidy spurious trailing headungs (only in examples)" 
  pattern="\s*\S+\s*.*$\s*\-+\s*"
  endPattern=".*"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  >
  <comment class="example.input" id="tidyheading">
  o (Oxygen)
  ----------
  </comment>
  
  <record id="text" repeat="2"/>
  
  <comment class="example.output" id="tidyheading">
    <module cmlx:templateRef="tidyheading" xmlns="http://www.xml-cml.org/schema" xmlns:cmlx="http://www.xml-cml.org/schema/cmlx"/>
  </comment>

  
</template>
