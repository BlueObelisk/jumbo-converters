<template repeat="*"  name="center of mass" id="centermass" 
  pattern=".*center of mass.*$\s+\-+.*" newline="$" endPattern="\s*">
  <comment>
 center of mass
 --------------
 x =   0.00000000 y =   0.00000000 z =   0.00000000

  </comment>
  <record repeat="2" id="junk">{X}</record>
  <record id="centermass">\s*x =\s*{F,n:x}\s*y =\s*{F,n:y}\s*z =\s*{F,n:z}\s*</record>
  <transform process="pullupSingleton" xpath="./cml:list[@cmlx:templateRef='centermass']"/> 
  <transform process="debug" xpath="." />
  <transform process="vector3" xpath="./cml:list[@cmlx:templateRef='centermass']" 
      from="*[@dictRef='n:x' or @dictRef='n:y' or @dictRef='n:z']"
       dictRef="compchem:centerofmass"/>
  <transform process="debug" xpath="." />
</template>
