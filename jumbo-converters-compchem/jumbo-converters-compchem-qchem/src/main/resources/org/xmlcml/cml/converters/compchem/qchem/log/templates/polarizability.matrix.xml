  <property dictRef="cc:polarizability">
    <array dataType="xsd:double" size="3" cmlx:row="1">-12.1472869  -0.0000016  -0.0000016</array>
    <array dataType="xsd:double" size="3" cmlx:row="2"> -0.0000016 -12.1472869   0.0000016</array>
    <array dataType="xsd:double" size="3" cmlx:row="3"> -0.0000016   0.0000016 -12.1472869</array>
